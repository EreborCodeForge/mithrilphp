<IfModule mod_rewrite.c>
    RewriteEngine On

    # Base (ajuste se seu app nÃ£o estiver na raiz do domÃ­nio)
    RewriteBase /

    # ðŸ”’ NÃ£o reescreve se o arquivo ou diretÃ³rio EXISTIR
